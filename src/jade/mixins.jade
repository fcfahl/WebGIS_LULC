mixin tabs_bootstrap(classLI,classA,name,tab,bool)
	- var idA = name + "-tab"
	- var ref = "#" + name

	li(class=classLI)
		a(class=classA href=ref role=roleA id=idA data-toggle="tab" aria-controls=name aria-expanded=bool)=tab


mixin table_boot(section,sort)

	- var index = 0

	for value, key in metadata
		if (layers[key] !== undefined)

			- var parse = layers[key]
			- var ID = parse.key
			- var show = parse.metadata
			- var name = parse.name

			- var tbl_ID = "tbl_" + ID
			- var head_ID = "head_" + ID
			- var collapse = "col_" + ID
			- var ref_collapse = "#col_" + ID

			if show == "yes"

				div(id=tbl_ID class="tbl" role="tablist" aria-multiselectable="true")
					.panel.panel-default
						.panel-heading.collapsed(role="tab" id=heading rel="#{index++}")
							h3.panel-title
								a(data-toggle="collapse" data-parent="#accordion" href=ref_collapse aria-expanded="true" aria-controls=tbl_ID)=name
					div(id=collapse class="panel-collapse collapse in" role="tabpanel" aria-labelledby=heading )
						+mk_table(key)

mixin mk_table (key)

	- var table_ID =  "tbl_" +  key
	- var name =  metadata[key].Name

		if ID == table
			table(id=table_ID class="table table-striped table-bordered table-hover table-sm" cellspacing="0" width="50%")
				tbody
					for  val, key2 in metadata[key]
						if key2 !== 'Type' && key2 !== 'Legend' && key2 !== 'Category_ID' && key2 !== 'Category'  && key2 !== 'Dataset'  && key2 !== 'ID'  && key2 !== 'Workspace'  && key2 !== 'Style' && key2 !== 'Data source'  && val !== ''
							tr(class="table_row")
								td #{key2}
								td #{val}

mixin legend_boot(section,group)

	- var index = 0

	for value, key in legend
		- var svg = value.img
		- var ref = "img/" + svg

		if (layers[key] !== undefined)
			- var parse = layers[key]
			- var ID = parse.key

			- var show = parse.legend
			- var name = parse.name
			- var leg_ID = "leg_" + parse.key
			- var head_ID = "head_" + parse.key
			- var opy_ID = "opy_" + parse.key
			- var collapse = "col_" + parse.key
			- var ref_collapse = "#col_" + parse.key

			if show == "yes"

				div(id=leg_ID class="leg" role="tablist" aria-multiselectable="true")
					.panel.panel-default
						.panel-heading.collapsed(role="tab" id=head_ID rel="#{index++}")
							h3.panel-title
								a(data-toggle="collapse" data-parent="#accordion" href=ref_collapse aria-expanded="true" aria-controls=ID class="accordion-toggle")=name

						div(id=collapse class="panel-collapse collapse in" role="tabpanel" aria-labelledby=head_ID )

							.opy
								.opy_title Opacity:
								input(id=opy_ID class="opy_slider slider" data-id="ID" type="range" min="0" max="1" step="0.1" value="1" autocomplete="off" onchange="update_Opacity(this);")

								.leg-img
									img(src=ref alt=name)


mixin accorde(section,group)

	.group
		- var index = 0
		h3=section
		div(id=group)

			if group == 'LULC' || group == 'ADM'

				for value, key in layers
					- var cat =  value.category
					- var name = value.name
					- var legend = value.legend
					- var legend_ID = "leg_" + value.key
					- var table_ID = "tbl_" + value.key
					- var checkbox_Class = "boxlayer box_" + value.key

					for item, key in value.items
						- var ID = item.ID
						- var year = item.year
						- var valid = item.active
						- var layer_Name = name + " " + year

						if group == cat && valid =="yes"
							//- - console.log (layer_Name, ID)

							//- create input box
							div(id=ID class='draggable')
								li
									input(type="checkbox" value=ID class=checkbox_Class data-key=value.key data-legend=legend_ID data-table=table_ID checked='false' rel="#{index++}")
									label(for=ID)
										span=layer_Name


			if group == 'WMS_external'
				+Capabilities

			if group == 'geotag'
				+Geotag
				+photo_Modal

			if group == 'atlas'
				+Atlas

